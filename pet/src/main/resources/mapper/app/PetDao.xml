<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chaoku.modules.app.dao.PetDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chaoku.modules.app.entity.PetEntity" id="petMap">
        <result property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="name" column="name"/>
        <result property="action1" column="action1"/>
        <result property="action2" column="action2"/>
        <result property="action3" column="action3"/>
        <result property="action4" column="action4"/>
        <result property="action5" column="action5"/>
        <result property="action6" column="action6"/>
        <result property="action7" column="action7"/>
        <result property="action8" column="action8"/>
        <result property="action9" column="action9"/>
        <result property="action10" column="action10"/>
        <result property="action11" column="action11"/>
        <result property="action12" column="action12"/>
        <result property="version" column="version"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>
    <select id="getPetVo" resultType="com.chaoku.modules.app.vo.pet.PetVo" parameterType="long">
        SELECT
          u.id id,
          u.user_id user_id,
          u.pet_id pet_id,
          u.nickname nickname,
          u.level level,
          u.experience experience,
          u.hunger_num hunger_num,
          u.clean_num clean_num,
          u.mood_num mood_num,
          p.type type,
          p.name name,
          p.action1 action1,
          p.action2 action2,
          p.action3 action3,
          p.action4 action4,
          p.action5 action5,
          p.action6 action6,
          p.action7 action7
        FROM
          tb_pet p
          RIGHT JOIN tb_user_pet u
            ON p.id = u.pet_id
        WHERE u.user_id = #{userId}
    </select>


</mapper>